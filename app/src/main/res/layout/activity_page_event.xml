<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.pageEvent"
    android:background="@color/couleurFond">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <LinearLayout
            android:id="@+id/enleverEvent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/bar_activites"
            >
            <TextView
                android:id="@+id/pageEventNom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/page_event_background"
                android:fontFamily="@font/simonetta_black"
                android:gravity="center"
                android:textSize="20dp"
                android:background="@drawable/custom_btn2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:id="@+id/personnaliteAuteurImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/pageEventAuteur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/couleur_blanc"
                android:fontFamily="@font/simonetta_black"
                android:gravity="center"
                android:textSize="20dp"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/pageEventVille"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/couleur_blanc"
                android:fontFamily="@font/simonetta_black"
                android:gravity="center"
                android:textSize="20dp"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="numberDecimal"/>
            <TextView
                android:id="@+id/pageEventInfos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/couleur_blanc"
                android:fontFamily="@font/simonetta_black"
                android:gravity="center"
                android:textSize="20dp"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="numberDecimal"/>
            <TextView
                android:id="@+id/pageEventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/couleur_blanc"
                android:fontFamily="@font/simonetta_black"
                android:gravity="center"
                android:textSize="20dp"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="numberDecimal"/>
            <Button
                android:id="@+id/supprimerEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/custom_btn1"
                android:text="@string/supprimerEvent"
                android:textColorHint="@color/couleur_blanc"
                android:fontFamily="@font/simonetta_black"
                android:gravity="center"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bar_activites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0"
            app:layout_constraintTop_toBottomOf="@id/exemples_activites"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/custom_edittext"
            >
            <Button
                android:id="@+id/vers_new_activite"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/ic_activite"
                android:paddingBottom="30dp"
                android:background="@drawable/custom_btn_empty"
                />
            <Button
                android:id="@+id/vers_event"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/ic_event"
                android:paddingBottom="30dp"
                android:background="@drawable/custom_btn_empty"
                />
            <Button
                android:id="@+id/vers_home"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/ic_home"
                android:paddingBottom="30dp"
                android:background="@drawable/custom_btn_empty"
                />
            <Button
                android:id="@+id/vers_discussion"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/ic_discussion"
                android:paddingBottom="30dp"
                android:background="@drawable/custom_btn_empty"
                />
            <Button
                android:id="@+id/vers_profil"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/ic_profil"
                android:paddingBottom="30dp"
                android:background="@drawable/custom_btn_empty"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>