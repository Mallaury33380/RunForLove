<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.persos"
    android:background="@color/couleurFond"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <LinearLayout
            android:id="@+id/exemples_activites"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/mbti_enfj"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableBottom="@drawable/mbti_enfj"
                            android:paddingBottom="15dp"
                            android:text="@string/enfj"
                            android:textColor="@color/custom_btn2"
                            android:fontFamily="@font/simonetta_black"
                            android:textSize="9dp"
                            android:background="@drawable/custom_btn_principal"
                            android:layout_margin="5dp"
                            />
                        <Button
                            android:id="@+id/mbti_enfp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableBottom="@drawable/mbti_enfp"
                            android:paddingBottom="15dp"
                            android:text="@string/enfp"
                            android:textColor="@color/custom_btn2"
                            android:fontFamily="@font/simonetta_black"
                            android:textSize="9dp"
                            android:background="@drawable/custom_btn_principal"
                            android:layout_margin="5dp"
                            />
                        <Button
                            android:id="@+id/mbti_entj"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableBottom="@drawable/mbti_entj"
                            android:paddingBottom="15dp"
                            android:text="@string/entj"
                            android:textColor="@color/custom_btn2"
                            android:fontFamily="@font/simonetta_black"
                            android:textSize="9dp"
                            android:background="@drawable/custom_btn_principal"
                            android:layout_margin="5dp"
                            />
                        <Button
                            android:id="@+id/mbti_entp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableBottom="@drawable/mbti_entp"
                            android:paddingBottom="15dp"
                            android:text="@string/entp"
                            android:textColor="@color/custom_btn2"
                            android:fontFamily="@font/simonetta_black"
                            android:textSize="9dp"
                            android:background="@drawable/custom_btn_principal"
                            android:layout_margin="5dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/mbti_esfj"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableBottom="@drawable/mbti_esfj"
                            android:paddingBottom="15dp"
                            android:text="@string/esfj"
                            android:textColor="@color/custom_btn2"
                            android:fontFamily="@font/simonetta_black"
                            android:textSize="9dp"
                            android:background="@drawable/custom_btn_principal"
                            android:layout_margin="5dp"
                            />
                        <Button
                            android:id="@+id/mbti_esfp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableBottom="@drawable/mbti_esfp"
                            android:paddingBottom="15dp"
                            android:text="@string/esfp"
                            android:textColor="@color/custom_btn2"
                            android:fontFamily="@font/simonetta_black"
                            android:textSize="9dp"
                            android:background="@drawable/custom_btn_principal"
                            android:layout_margin="5dp"
                            />
                        <Button
                            android:id="@+id/mbti_estj"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableBottom="@drawable/mbti_estj"
                            android:paddingBottom="15dp"
                            android:text="@string/estj"
                            android:textColor="@color/custom_btn2"
                            android:fontFamily="@font/simonetta_black"
                            android:textSize="9dp"
                            android:background="@drawable/custom_btn_principal"
                            android:layout_margin="5dp"
                            />
                        <Button
                            android:id="@+id/mbti_estp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableBottom="@drawable/mbti_estp"
                            android:paddingBottom="15dp"
                            android:text="@string/estp"
                            android:textColor="@color/custom_btn2"
                            android:fontFamily="@font/simonetta_black"
                            android:textSize="9dp"
                            android:background="@drawable/custom_btn_principal"
                            android:layout_margin="5dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/mbti_infj"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableBottom="@drawable/mbti_infj"
                            android:paddingBottom="15dp"
                            android:text="@string/infj"
                            android:textColor="@color/custom_btn2"
                            android:fontFamily="@font/simonetta_black"
                            android:textSize="9dp"
                            android:background="@drawable/custom_btn_principal"
                            android:layout_margin="5dp"
                            />
                        <Button
                            android:id="@+id/mbti_infp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableBottom="@drawable/mbti_infp"
                            android:paddingBottom="15dp"
                            android:text="@string/infp"
                            android:textColor="@color/custom_btn2"
                            android:fontFamily="@font/simonetta_black"
                            android:textSize="9dp"
                            android:background="@drawable/custom_btn_principal"
                            android:layout_margin="5dp"
                            />
                        <Button
                            android:id="@+id/mbti_intj"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableBottom="@drawable/mbti_intj"
                            android:paddingBottom="15dp"
                            android:text="@string/intj"
                            android:textColor="@color/custom_btn2"
                            android:fontFamily="@font/simonetta_black"
                            android:textSize="9dp"
                            android:background="@drawable/custom_btn_principal"
                            android:layout_margin="5dp"
                            />
                        <Button
                            android:id="@+id/mbti_intp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableBottom="@drawable/mbti_intp"
                            android:paddingBottom="15dp"
                            android:text="@string/intp"
                            android:textColor="@color/custom_btn2"
                            android:fontFamily="@font/simonetta_black"
                            android:textSize="9dp"
                            android:background="@drawable/custom_btn_principal"
                            android:layout_margin="5dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/mbti_isfj"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableBottom="@drawable/mbti_isfj"
                            android:paddingBottom="15dp"
                            android:text="@string/isfj"
                            android:textColor="@color/custom_btn2"
                            android:fontFamily="@font/simonetta_black"
                            android:textSize="9dp"
                            android:background="@drawable/custom_btn_principal"
                            android:layout_margin="5dp"
                            />
                        <Button
                            android:id="@+id/mbti_isfp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableBottom="@drawable/mbti_isfp"
                            android:paddingBottom="15dp"
                            android:text="@string/isfp"
                            android:textColor="@color/custom_btn2"
                            android:fontFamily="@font/simonetta_black"
                            android:textSize="9dp"
                            android:background="@drawable/custom_btn_principal"
                            android:layout_margin="5dp"
                            />
                        <Button
                            android:id="@+id/mbti_istj"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableBottom="@drawable/mbti_istj"
                            android:paddingBottom="15dp"
                            android:text="@string/istj"
                            android:textColor="@color/custom_btn2"
                            android:fontFamily="@font/simonetta_black"
                            android:textSize="9dp"
                            android:background="@drawable/custom_btn_principal"
                            android:layout_margin="5dp"
                            />
                        <Button
                            android:id="@+id/mbti_istp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableBottom="@drawable/mbti_istp"
                            android:paddingBottom="15dp"
                            android:text="@string/istp"
                            android:textColor="@color/custom_btn2"
                            android:fontFamily="@font/simonetta_black"
                            android:textSize="9dp"
                            android:background="@drawable/custom_btn_principal"
                            android:layout_margin="5dp"
                            />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bar_activites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0"
            app:layout_constraintTop_toBottomOf="@id/exemples_activites"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/custom_edittext"
            >
            <Button
                android:id="@+id/vers_new_activite"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/ic_activite"
                android:paddingBottom="30dp"
                android:background="@drawable/custom_btn_empty"
                />
            <Button
                android:id="@+id/vers_event"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/ic_event"
                android:paddingBottom="30dp"
                android:background="@drawable/custom_btn_empty"
                />
            <Button
                android:id="@+id/vers_home"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/ic_home"
                android:paddingBottom="30dp"
                android:background="@drawable/custom_btn_empty"
                />
            <Button
                android:id="@+id/vers_discussion"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/ic_discussion"
                android:paddingBottom="30dp"
                android:background="@drawable/custom_btn_empty"
                />
            <Button
                android:id="@+id/vers_profil"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/ic_profil"
                android:paddingBottom="30dp"
                android:background="@drawable/custom_btn_empty"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>